---

<header class="fixed w-full z-50 font-sans shadow-xl">
    
    <div class="bg-navy-900 text-slate-300 text-[10px] tracking-widest uppercase py-2 border-b border-white/10 relative z-50">
        <div class="container mx-auto px-6 flex justify-between items-center">
            
            <span class="hidden md:flex items-center gap-2 text-gold-500 font-bold">
                <span class="w-1.5 h-1.5 bg-gold-500 rounded-full"></span>
                Estudio Integral Contable & Jurídico
            </span>

            <span class="md:hidden font-bold text-white flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-gold-500 rounded-full animate-pulse"></span>
                Estudio Contable & Jurídico
            </span>

            <div class="hidden md:flex gap-8 opacity-90 font-medium">
                <span class="cursor-default hover:text-white transition-colors">
                    Lun a Vie, 9:00 - 17:00 hs
                </span>
                <a href="mailto:info@rovellaspat.com" class="hover:text-gold-500 transition-colors flex items-center gap-2">
                    info@rovellaspat.com
                </a>
            </div>
        </div>
    </div>

    <nav class="bg-white/95 backdrop-blur-xl border-b border-slate-100 relative z-40">
        <div class="container mx-auto px-6 h-24 flex justify-between items-center">
            
            <a href="#inicio" class="flex flex-col group z-50">
                <span class="font-serif text-xl md:text-2xl font-black text-navy-900 tracking-wide group-hover:text-gold-600 transition-colors">
                    ROVELLA SPATAFORE
                </span>
                <span class="text-[9px] md:text-[10px] font-bold text-slate-500 uppercase tracking-[0.3em] mt-0.5 group-hover:text-navy-800 transition-colors">
                    Pascual & Asociados
                </span>
            </a>

            <div class="hidden lg:flex items-center gap-10 text-xs font-bold text-navy-900 uppercase tracking-widest">
                <a href="#contable" class="hover:text-gold-600 transition-colors">Contable</a>
                <a href="#legal" class="hover:text-gold-600 transition-colors">Jurídico</a>
                <a href="#contacto" class="hover:text-gold-600 transition-colors">Ubicación</a>
                
                <a href="https://wa.me/54911XXXXXXXX" target="_blank" class="bg-navy-900 text-white px-6 py-3 rounded-sm text-[10px] font-bold uppercase tracking-[0.2em] hover:bg-gold-600 transition-all shadow-lg border border-navy-900 hover:border-gold-600">
                    Consulta WhatsApp
                </a>
            </div>

            <button id="menu-toggle" class="lg:hidden text-navy-900 focus:outline-none w-10 h-10 relative flex flex-col justify-center items-center gap-1.5 group z-50">
                <span id="line-1" class="w-6 h-0.5 bg-navy-900 rounded-full transition-all duration-300 ease-in-out transform origin-center"></span>
                <span id="line-2" class="w-6 h-0.5 bg-navy-900 rounded-full transition-all duration-300 ease-in-out"></span>
                <span id="line-3" class="w-6 h-0.5 bg-navy-900 rounded-full transition-all duration-300 ease-in-out transform origin-center"></span>
            </button>

            <div id="mobile-menu" class="absolute top-full left-0 w-full bg-white border-t border-slate-100 shadow-2xl overflow-hidden transition-all duration-500 ease-in-out max-h-0 opacity-0 z-40">
                <div class="flex flex-col p-8 space-y-6 text-center">
                    <a href="#contable" class="mobile-link block text-sm font-bold uppercase tracking-widest text-navy-900 hover:text-gold-600 py-3 border-b border-slate-50">
                        Área Contable
                    </a>
                    <a href="#legal" class="mobile-link block text-sm font-bold uppercase tracking-widest text-navy-900 hover:text-gold-600 py-3 border-b border-slate-50">
                        Área Legal
                    </a>
                    <a href="#contacto" class="mobile-link block text-sm font-bold uppercase tracking-widest text-navy-900 hover:text-gold-600 py-3 border-b border-slate-50">
                        Ubicación & Contacto
                    </a>
                    
                    <div class="pt-4">
                        <a href="https://wa.me/54911XXXXXXXX" class="block w-full bg-navy-900 text-white px-6 py-4 text-xs font-bold uppercase tracking-widest hover:bg-gold-600 transition-colors shadow-lg rounded-sm">
                            Enviar Mensaje
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </nav>
</header>

<script>
    const btn = document.getElementById('menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const line1 = document.getElementById('line-1');
    const line2 = document.getElementById('line-2');
    const line3 = document.getElementById('line-3');
    const links = document.querySelectorAll('.mobile-link');

    let isOpen = false;

    function toggleMenu() {
        if (!menu || !line1 || !line2 || !line3) return;

        isOpen = !isOpen;
        
        if (isOpen) {
            // ABRIR
            menu.classList.remove('max-h-0', 'opacity-0');
            menu.classList.add('max-h-screen', 'opacity-100');
            
            // Animación X
            line1.classList.add('rotate-45', 'translate-y-[8px]');
            line2.classList.add('opacity-0', 'translate-x-2');
            line3.classList.add('-rotate-45', '-translate-y-[8px]');
        } else {
            // CERRAR
            menu.classList.add('max-h-0', 'opacity-0');
            menu.classList.remove('max-h-screen', 'opacity-100');

            // Restaurar Hamburguesa
            line1.classList.remove('rotate-45', 'translate-y-[8px]');
            line2.classList.remove('opacity-0', 'translate-x-2');
            line3.classList.remove('-rotate-45', '-translate-y-[8px]');
        }
    }

    if (btn) btn.addEventListener('click', toggleMenu);
    
    // Cerrar al hacer clic en un link
    links.forEach(link => link.addEventListener('click', () => isOpen && toggleMenu()));
</script>